
public class exercise {

	public static void main(String[] args) {
		
		int a;
		a = 12;
		
		java.util.Scanner input = new java.util.Scanner(System.in);
		System.out.println("정수형 데이터 하나 입력>");
		a = input.nextInt();
		
		if(a%2==1) {
			System.out.println("홀수입니다.");
		}else 
			System.out.println("짝수입니다.");
	}

}
