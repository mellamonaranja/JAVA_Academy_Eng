import java.util.Scanner;

public class testjava {

	public static void main(String[] args) {
		
		int sec;
		int min;
		int nsec;
		int nmin;
		int nhour;
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("input the seconds>");
		sec = scanner.nextInt();
		System.out.print("It's on the way to calculating...");
		
		if(sec>=0) {
		
		min = sec/60;
		nsec=sec%60;
		nhour=min/60;
		nmin=min%60;
		
		System.out.printf("The time inserted by keyboard is %d hour, %d minutes, %d seconds", nhour, nmin, nsec);
		
		}else {
			System.out.println("Input the number bigger than 0 ");
			
		}
			
		scanner.close();
		

	}

}
